{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "commander"
  ],
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@astral/commander": "*",
    "@astral/commitlint-config": "*",
    "commitlint": "^17.0.3",
    "eslint": "^8.54.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.2",
    "prettier": "^3.0.3",
    "read-dir-names": "1.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^15.11.0"
  },
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "lint:types": "npm run lint:types --workspaces --if-present",
    "build": "npm run build --workspaces --if-present"
  }
}
